<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ItemActivity">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title"/>
    <LinearLayout
      android:background="@drawable/border"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="150dp">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="口罩      物品ID:000"
        android:layout_gravity="center_vertical"/>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
          android:id="@+id/item_had_button"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="现有数量"
          android:textColor="@android:color/holo_blue_dark"
          android:textSize="20sp" />
        <TextView
          android:id="@+id/item_had_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="20sp"
          android:paddingLeft="10dp"
          android:gravity="center_vertical"
          />
      </LinearLayout>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
          android:id="@+id/item_need_button"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="需要数量"
          android:textColor="@android:color/holo_blue_dark"
          android:textSize="20sp" />
        <TextView
          android:id="@+id/item_need_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="20sp"
          android:paddingLeft="10dp"
          android:gravity="center_vertical"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:background="@drawable/border"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="150dp">
      <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="防护服   物品ID:001"
        android:layout_gravity="center_vertical"/>
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
          android:id="@+id/item2_had_button"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="现有数量"
          android:textColor="@android:color/holo_blue_dark"
          android:textSize="20sp" />
        <TextView
          android:id="@+id/item2_had_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="20sp"
          android:text="1000"
          android:paddingLeft="10dp"
          android:gravity="center_vertical"
          />
      </LinearLayout>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
          android:id="@+id/item2_need_button"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:text="需要数量"
          android:textColor="@android:color/holo_blue_dark"
          android:textSize="20sp" />
        <TextView
          android:id="@+id/item2_need_name"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:textSize="20sp"
          android:text="0"
          android:paddingLeft="10dp"
          android:gravity="center_vertical"/>
      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>